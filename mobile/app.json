{
  "expo": {
    "name": "Golf Recorder",
    "slug": "golfrecorder-mobile", 
    "version": "0.1.0",
    "platforms": ["ios", "android"],
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": false
    },
    "android": {
      "package": "com.johntaylormfc.golfrecorder",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE", 
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow Golf Recorder to access your microphone for voice input."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ad4180da-188d-429f-a08c-94e8b459fe84"
      }
    }
  }
}
